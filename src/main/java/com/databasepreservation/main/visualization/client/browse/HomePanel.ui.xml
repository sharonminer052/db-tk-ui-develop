<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
>

    <ui:with field='messages' type='config.i18n.client.ClientMessages' />
    <g:FlowPanel addStyleNames="browseContent wrapper skip_padding">
        <g:FlowPanel addStyleNames="row full_width skip_padding">
            <g:FlowPanel addStyleNames="homePanel">
                <g:HTML>
                    <p><ui:text from='{messages.homePageDescriptionTop}' />
                    </p>
                    <p>
                    <ui:text from='{messages.homePageDescriptionBottom}' /> <a href="http://visualization.database-preservation.com/">
                        <ui:text from='{messages.homePageDescriptionHere}' /></a>.
                    </p>
                </g:HTML>
            </g:FlowPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
