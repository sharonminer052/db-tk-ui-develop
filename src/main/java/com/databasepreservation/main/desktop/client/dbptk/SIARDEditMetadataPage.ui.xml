<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sb='urn:import:com.databasepreservation.main.desktop.client.common.sidebar'
             xmlns:m='urn:import:com.databasepreservation.main.common.shared.client.breadcrumb'>


    <g:FlowPanel>
        <m:BreadcrumbPanel ui:field="breadcrumb" />
        <g:HorizontalPanel addStyleNames="browseContentPreviewPanel">
            <!-- LEFT PANEL -->
            <g:cell>
                <sb:MetadataEditSidebar ui:field="sidebar" />
            </g:cell>
            <!-- RIGHT PANEL -->
            <g:cell width="100%">
                <g:FlowPanel addStyleNames="browseContentFilePreviewPanel">
                    <g:SimplePanel addStyleNames="col_12 content" ui:field="rightPanelContainer" />
                </g:FlowPanel>
            </g:cell>
        </g:HorizontalPanel>

    </g:FlowPanel>

</ui:UiBinder>