<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:lists='urn:import:com.databasepreservation.main.desktop.client.common.lists'
             xmlns:search="urn:import:com.databasepreservation.main.common.shared.client.common.search">

    <ui:with field='messages' type='config.i18n.client.ClientMessages' />

    <g:FlowPanel addStyleNames="metadata-edit">
        <g:FlowPanel>
            <g:Label addStyleNames="h1"><ui:text from='{messages.menusidebar_usersRoles}'/></g:Label>
            <g:FlowPanel ui:field="contentItems"/>
        </g:FlowPanel>

        <g:FlowPanel addStyleNames="metadata-save">
            <g:Button addStyleNames="btn btn-save" ui:field="buttonSave">
                <ui:text from='{messages.metadataSave}'/>
            </g:Button>
            <g:Button addStyleNames="btn btn-default btn-times-circle" ui:field="buttonCancel">
                <ui:text from='{messages.metadataSaveCancel}'/>
            </g:Button>
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>