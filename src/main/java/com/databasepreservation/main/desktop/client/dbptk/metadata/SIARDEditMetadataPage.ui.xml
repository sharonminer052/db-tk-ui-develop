<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sb='urn:import:com.databasepreservation.main.desktop.client.common.sidebar'
             xmlns:m='urn:import:com.databasepreservation.main.common.shared.client.breadcrumb'
             xmlns:c='urn:import:com.databasepreservation.main.common.shared.client.common'>

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>

    <g:FlowPanel>
        <m:BreadcrumbPanel ui:field="breadcrumb" />
        <g:HorizontalPanel addStyleNames="browseContentPreviewPanel">
            <!-- LEFT PANEL -->
            <g:cell>
                <sb:MetadataEditSidebar ui:field="sidebar" />
            </g:cell>
            <!-- RIGHT PANEL -->
            <g:cell width="100%">
                <g:FlowPanel addStyleNames="metadata-panel">
                    <g:SimplePanel addStyleNames="col_12 content metadata-content" ui:field="rightPanelContainer" />
                    <c:LoadingDiv visible="false" ui:field="loading"/>
                    <g:FlowPanel visible="false" addStyleNames="metadata-save" ui:field="saveMetadataPanel">
                        <g:Button addStyleNames="btn btn-times-circle btn-danger" ui:field="buttonRevert">
                            <ui:text from='{messages.metadataButtonRevert}'/>
                        </g:Button>
                        <g:Button addStyleNames="btn btn-save metadata-btn-save" ui:field="buttonSave">
                            <ui:text from='{messages.metadataButtonSave}'/>
                        </g:Button>
                        <g:FlowPanel addStyleNames="metadata-update">
                            <g:Label>
                                <ui:text from='{messages.metadataHasUpdates}'/>
                            </g:Label>
                        </g:FlowPanel>
                    </g:FlowPanel>
                </g:FlowPanel>
            </g:cell>
        </g:HorizontalPanel>

    </g:FlowPanel>

</ui:UiBinder>