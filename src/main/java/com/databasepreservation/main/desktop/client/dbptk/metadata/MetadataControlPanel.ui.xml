<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:c='urn:import:com.databasepreservation.main.common.shared.client.common'>

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>

    <g:FlowPanel addStyleNames="metadata-save" ui:field="saveMetadataPanel">
        <c:LoadingDiv visible="false" ui:field="loading"/>
        <g:Button addStyleNames="btn btn-save metadata-btn-save" ui:field="buttonSave">
            <ui:text from='{messages.metadataButtonSave}'/>
        </g:Button>
        <g:Button visible="false" addStyleNames="btn btn-times-circle btn-danger metadata-btn-revert" ui:field="buttonRevert">
            <ui:text from='{messages.metadataButtonRevert}'/>
        </g:Button>
        <g:FlowPanel addStyleNames="metadata-update">
            <g:Label ui:field="toolTip" visible="false" />
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>