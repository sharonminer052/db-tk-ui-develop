<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>
    <g:FlowPanel addStyleNames="wizard-title">
        <g:Label addStyleNames="h4">
            <ui:text from='{messages.wizardExportOptionsTitle}'/>
        </g:Label>
        <g:Label addStyleNames="h5">
            <ui:text from='{messages.wizardExportOptionsDescription}'/>
        </g:Label>
        <g:FlowPanel addStyleNames="form-container export-options-form">
            <g:SimplePanel ui:field="listBox"/>
            <g:FlowPanel ui:field="content"/>
        </g:FlowPanel>
    </g:FlowPanel>

</ui:UiBinder>