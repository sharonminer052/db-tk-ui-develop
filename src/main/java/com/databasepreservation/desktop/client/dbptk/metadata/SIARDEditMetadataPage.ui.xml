<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:sb='urn:import:com.databasepreservation.desktop.client.common.sidebar'
             xmlns:ct='urn:import:com.databasepreservation.desktop.client.dbptk.metadata'
             xmlns:m='urn:import:com.databasepreservation.common.shared.client.breadcrumb'>

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>

    <g:FlowPanel addStyleNames="application-container">
        <m:BreadcrumbPanel ui:field="breadcrumb" />
        <g:HorizontalPanel addStyleNames="browseContentPreviewPanel">
            <!-- LEFT PANEL -->
            <g:cell>
                <sb:MetadataEditSidebar ui:field="sidebar" />
            </g:cell>
            <!-- RIGHT PANEL -->
            <g:cell width="100%">
                <g:FlowPanel addStyleNames="metadata-panel">
                    <!-- CONTENT PANEL -->
                    <g:SimplePanel addStyleNames="col_12 content metadata-content" ui:field="rightPanelContainer" />
                    <!-- CONTROL PANEL -->
                    <ct:MetadataControlPanel ui:field="controls" />

                </g:FlowPanel>
            </g:cell>
        </g:HorizontalPanel>

    </g:FlowPanel>

</ui:UiBinder>