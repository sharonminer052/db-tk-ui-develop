<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:with field='messages' type='config.i18n.client.ClientMessages'/>
    <g:FlowPanel addStyleNames="metadata-edit">
        <g:SimplePanel addStyleNames="h1" ui:field="mainHeader">
            <g:Label>
                <ui:text from='{messages.loadingTableInfo}'/>
            </g:Label>
        </g:SimplePanel>
        <g:TextArea ui:field="description" addStyleNames="form-textbox"/>
        <g:TabPanel ui:field="tabPanel" addStyleNames="browseItemMetadata metadata-edit-tab"/>
    </g:FlowPanel>

</ui:UiBinder>