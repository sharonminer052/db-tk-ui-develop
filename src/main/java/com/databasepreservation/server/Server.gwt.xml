<?xml version="1.0" encoding="UTF-8"?>
<module>
    <inherits name='com.databasepreservation.common.Common'/>

    <!-- Specify the app entry point class.                         -->
    <entry-point class='com.databasepreservation.server.client.main.Main'/>

    <!-- Specify the paths for translatable code                    -->
    <source path='client'/>
    <source path='shared'/>

    <!-- better stack trace, http://www.summa.com/blog/2012/06/11/7-tips-for-exception-handling-in-gwt -->
    <set-property name="compiler.stackMode" value="emulated" />
    <set-configuration-property name="compiler.emulatedStack.recordFileNames" value="true" />
    <set-configuration-property name="compiler.emulatedStack.recordLineNumbers" value="true" />
</module>
