<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:lists="urn:import:com.databasepreservation.server.client.common.lists">

    <ui:with field='messages' type='config.i18n.client.ClientMessages' />
    <g:FlowPanel>
        <g:Label addStyleNames="h1"><ui:text from='{messages.databaseListing}'/></g:Label>
        <g:SimplePanel>
            <lists:DatabaseList ui:field="databaseList"/>
        </g:SimplePanel>
    </g:FlowPanel>
</ui:UiBinder>
