<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:com.databasepreservation.common.client.common.breadcrumb'
>

    <g:FlowPanel ui:field="toplevel" addStyleNames="content-container">
        <g:FlowPanel addStyleNames="full_width skip_padding">
            <g:FocusPanel addStyleNames="browseContentFocusPanel">
                <g:HorizontalPanel addStyleNames="browseContentPreviewPanel">
                    <g:cell width="100%" height="100%">
                        <g:FlowPanel addStyleNames="browseContentFilePreviewPanel">
                            <g:FlowPanel ui:field="toolbar">
                                <m:BreadcrumbPanel ui:field="breadcrumb" addStyleNames="browseContentBreadcrumb"/>
                                <g:MenuBar ui:field="menu" />
                                <g:SimplePanel addStyleNames="clear-both" />
                            </g:FlowPanel>
                            <g:SimplePanel addStyleNames="content content-container" ui:field="panelContainer" />
                        </g:FlowPanel>
                    </g:cell>
                </g:HorizontalPanel>
            </g:FocusPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
