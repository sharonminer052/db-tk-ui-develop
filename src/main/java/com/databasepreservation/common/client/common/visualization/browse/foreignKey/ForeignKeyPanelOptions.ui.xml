<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <g:FlowPanel ui:field="mainContainer">
		<g:FlowPanel addStyleNames="structure-header" ui:field="mainHeader">
			<g:FlowPanel addStyleNames="advancedOptionsButton">
				<g:SimplePanel addStyleNames="btn-item">
					<g:Button ui:field="options" addStyleNames="btn" />
				</g:SimplePanel>
			</g:FlowPanel>
		</g:FlowPanel>

        <g:FlowPanel ui:field="content" addStyleNames="option-container"/>

		<g:SimplePanel addStyleNames="clearfix" />
		<g:FlowPanel addStyleNames="navigation-panel-buttons">
			<g:SimplePanel addStyleNames="btn-item">
				<g:Button ui:field="btnUpdate" addStyleNames="btn btn-primary"/>
			</g:SimplePanel>
			<g:SimplePanel addStyleNames="btn-item">
				<g:Button ui:field="btnBack" addStyleNames="btn btn-primary btn-back-wizard"/>
			</g:SimplePanel>
		</g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
