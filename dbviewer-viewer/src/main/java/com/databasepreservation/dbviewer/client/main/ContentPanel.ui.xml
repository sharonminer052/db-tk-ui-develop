<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:m='urn:import:com.databasepreservation.dbviewer.client.main'
             xmlns:wcag="urn:import:com.databasepreservation.dbviewer.shared.client.widgets.wcag"
>
    <g:FlowPanel styleName="viewRepresentation" addStyleNames="wrapper skip_padding">
        <g:FlowPanel addStyleNames="row full_width skip_padding">
            <g:FocusPanel ui:field="focusPanel" addStyleNames="focusPreviewPanel">
                <g:HorizontalPanel ui:field="previewPanel">
                    <!-- LEFT PANEL -->
                    <g:FlowPanel ui:field="sidebar">
                        <g:FlowPanel styleName="searchPanel">
                            <wcag:AccessibleFocusPanel styleName="searchButton"
                                                       ui:field="searchInputButton">
                                <g:HTML addStyleNames="searchButton-html">
                                    <span class="fa-stack fa-lg">
                                        <i class="fa fa-circle fa-stack-2x"></i>
                                        <i class="fa fa-search fa-stack-1x"></i>
                                    </span>
                                </g:HTML>
                            </wcag:AccessibleFocusPanel>
                            <g:FlowPanel styleName="searchPanelLeft">
                                <g:TextBox ui:field="searchInputBox" addStyleNames="searchBox"/>
                            </g:FlowPanel>
                        </g:FlowPanel>
                        <g:FlowPanel addStyleNames="fileListScroll">
                            <g:FlowPanel ui:field="sidebarContent"/>
                            <!--<lists:SimpleFileList ui:field="filesList" />-->
                        </g:FlowPanel>
                    </g:FlowPanel>
                    <!-- RIGHT PANEL -->
                    <g:FlowPanel ui:field="filePreviewPanel">
                        <g:FlowPanel addStyleNames="filePreviewToolbar">
                            <m:BreadcrumbPanel ui:field="breadcrumb" addStyleNames="viewRepresentationBreadcrumb"/>
                        </g:FlowPanel>
                        <g:FlowPanel addStyleNames="col_10 content" ui:field="content">

                        </g:FlowPanel>
                    </g:FlowPanel>
                </g:HorizontalPanel>
            </g:FocusPanel>
        </g:FlowPanel>
    </g:FlowPanel>
</ui:UiBinder>
