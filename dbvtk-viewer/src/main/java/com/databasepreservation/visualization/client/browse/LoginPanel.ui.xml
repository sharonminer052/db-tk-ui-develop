    <g:FlowPanel addStyleNames="browseContent wrapper skip_padding">
        <g:FlowPanel addStyleNames="row full_width skip_padding">

            <g:FlowPanel addStyleNames="loginPanel">
                <g:HTML>
                    <h1><ui:text>Login</ui:text></h1>
                </g:HTML>
                <g:FlowPanel>
                    <g:Label addStyleNames="form-label"><ui:text>Username</ui:text></g:Label>
                    <g:TextBox ui:field="username" addStyleNames="fieldTextBox"></g:TextBox>
                    <g:Label addStyleNames="form-label"><ui:text>Password</ui:text></g:Label>
                    <g:PasswordTextBox ui:field="password"
                                       addStyleNames="fieldTextBox"></g:PasswordTextBox>
                </g:FlowPanel>
                <g:Label ui:field="error" addStyleNames="login-error"></g:Label>
                <g:FlowPanel addStyleNames="login-buttons">
                    <g:Button ui:field="recover" addStyleNames="btn btn-link login-link"><ui:text>Recover password</ui:text></g:Button>
                    <g:Button ui:field="register" addStyleNames="btn btn-link login-link"><ui:text>Sign up</ui:text></g:Button>
                    <g:Button ui:field="login" addStyleNames="btn btn-play login-button"><ui:text>Login</ui:text></g:Button>
                </g:FlowPanel>
            </g:FlowPanel>


